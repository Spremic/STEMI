<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/galery.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body id="body">
    <header class="animate__animated">
      <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container">
          <!-- Logo -->
          <a class="navbar-brand navLogo" href="#">
            <img src="/logo.png" alt="Logo" />
          </a>

          <!-- Meni -->
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
            id="openNavModal"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div
            class="collapse navbar-collapse justify-content-end"
            id="navbarNav"
          >
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/">Početna</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/about">O nama</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/contact">Kontakt</a>
              </li>

              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle active"
                  href="#"
                  id="galleryDropdown"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  Divizije
                </a>
                <div class="dropdown-menu" aria-labelledby="galleryDropdown">
                  <a class="dropdown-item" href="/stolarija">Stemi stolarija</a>
                  <a class="dropdown-item" href="/metal">Stemi metal</a>
                  <a class="dropdown-item" href="/tekstil">Stemi tekstil</a>
                  <a class="dropdown-item" href="/tekstil">Stemi drvo</a>
                </div>
              </li>
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  href="#"
                  id="languageDropdown"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  Choose Language
                </a>
                <div class="dropdown-menu language-dropdown" aria-labelledby="languageDropdown">
                  <a class="dropdown-item">Serbian</a>
                  <a class="dropdown-item">English</a>
                  <a class="dropdown-item">German</a>
                  <a class="dropdown-item">French</a>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <div id="page-title">
      <!-- Image by 652234 from Pixabay -->
      <div>
        <h2><%= jsonPodaci.firstTitle %></h2>
      </div>
    </div>

    <section id="first-description">
      <div class="title">
        <h3><%= jsonPodaci.firstTitle %></h3>
      </div>
      <div class="text">
        <p><%= jsonPodaci.firstText %></p>
      </div>
    </section>

    <section id="first-image">
      <div class="flex">
        <div>
          <img src="<%= jsonPodaci.pictureOne %>" alt="slika" />
        </div>
        <div>
          <img src="<%= jsonPodaci.pictureTwo %>" alt="slika" />
        </div>
      </div>
    </section>

    <section id="second-text">
      <div class="title">
        <h3>STE-MI INTERNATIONAL</h3>
        <div class="title-border"></div>
      </div>

      <div class="flex">
        <div class="left">
          <p><%= jsonPodaci.leftText %></p>
        </div>
        <div class="right">
          <p><%= jsonPodaci.rightText %></p>
        </div>
      </div>
    </section>

    <section id="image-slider">
      <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img
              src="<%= jsonPodaci.imageSliderActive %>"
              class="d-block w-100"
              alt="stolarija"
            />
          </div>
          <% jsonPodaci.imageSlider.forEach(function(e) { %>
          <div class="carousel-item">
            <img src="<%= e %>" class="d-block w-100" alt="stolarija" />
          </div>
          <% }); %>
        </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExample"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExample"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </section>

    <br /><br /><br />

    <!-- Footer -->
    <footer class="text-center text-lg-start">
      <!-- Section: Social media -->
      <section
        class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom"
      >
        <!-- Left -->
        <div class="me-5 d-none d-lg-block">
          <span>Konektujte se sa nama putem drustvenih mreza:</span>
        </div>
        <!-- Left -->

        <!-- Right -->
        <div>
          <a href="mailto:office@ste-mi.com" class="me-4 link-secondary">
            <i class="fab fa-google"></i>
          </a>

          <a
            href="https://www.linkedin.com/company/ste-mi-international/"
            class="me-4 link-secondary"
          >
            <i class="fab fa-linkedin"></i>
          </a>
        </div>
        <!-- Right -->
      </section>
      <!-- Section: Social media -->

      <!-- Section: Links  -->
      <section>
        <div class="container text-center text-md-start mt-5">
          <!-- Grid row -->
          <div class="row mt-3">
            <!-- Grid column -->
            <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
              <!-- Content -->
              <h6 class="text-uppercase fw-bold mb-4">
                <i class="fas fa-gem me-3 text-secondary"></i>STE-MI
                INTERNATIONAL
              </h6>
              <p>Stalne promene na tržištu nas motivišu da budemo bolji</p>
            </div>
            <!-- Grid column -->

            <!-- Grid column -->
            <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
              <!-- Links -->
              <h6 class="text-uppercase fw-bold mb-4">Linkovi</h6>
              <p>
                <a href="#!" class="text-reset">Pocetna</a>
              </p>
              <p>
                <a href="#!" class="text-reset">O nama</a>
              </p>
              <p>
                <a href="#!" class="text-reset">Kontakt</a>
              </p>
              <p>
                <a href="#!" class="text-reset">Legal</a>
              </p>
            </div>
            <!-- Grid column -->

            <!-- Grid column -->
            <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
              <!-- Links -->
              <h6 class="text-uppercase fw-bold mb-4">Drustvene mreze</h6>
              <p>
                <a href="mailto:office@ste-mi.com" class="text-reset">Gmail</a>
              </p>
              <p>
                <a
                  href="https://www.linkedin.com/company/ste-mi-international/"
                  target="_blank"
                  class="text-reset"
                  >Linkedin</a
                >
              </p>
            </div>
            <!-- Grid column -->

            <!-- Grid column -->
            <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
              <!-- Links -->
              <h6 class="text-uppercase fw-bold mb-4">Contact</h6>
              <p>
                <i class="fas fa-home me-3 text-secondary"></i> Ivice
                Miladinovića 2, Babusnica
              </p>
              <p>
                <a
                  href="mailto:office@ste-mi.com"
                  style="text-decoration: none; color: white"
                >
                  <i class="fas fa-envelope me-3 text-secondary"></i>
                  office@ste-mi.com
                </a>
              </p>
            </div>
            <!-- Grid column -->
          </div>
          <!-- Grid row -->
        </div>
      </section>
      <!-- Section: Links  -->

      <!-- Copyright -->
      <div
        class="text-center p-4"
        style="background-color: rgba(0, 0, 0, 0.025)"
      >
        © 2021 Copyright:
        <a class="text-reset fw-bold" href="https://www.ste-mi.com/"
          >STE-MI INTERNATIONAL</a
        >
      </div>
      <!-- Copyright -->
    </footer>
    <!-- Footer -->

    <script src="/language.js"></script>
  </body>
</html>
