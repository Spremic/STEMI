    <section id="recension">
      <div class="recensionTitle">
        <h3><%= jsonPodaci.commentsTitle %></h3>
      </div>

      <div id="carouselExampleIndicators" class="carousel slide">
        <div class="carousel-indicators">
          <button
            type="button"
            data-bs-target="#carouselExampleIndicators"
            data-bs-slide-to="0"
            class="active"
            id="firstCaruosel"
            aria-current="true"
            aria-label="Slide 1"
