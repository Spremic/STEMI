            aria-label="Slide 2"
            id="secondCaruosel"
          ></button>
          <button
            type="button"
            data-bs-target="#carouselExampleIndicators"
            data-bs-slide-to="2"
            aria-label="Slide 3"
            id="thirdCaruosel"
          ></button>
        </div>
        <div class="carousel-inner" id="caruselContainer">
          <div class="carousel-item active">
            <div class="quote quoteContainer">
              <div>
                <i class="fa fa-quote-right" aria-hidden="true"></i>
